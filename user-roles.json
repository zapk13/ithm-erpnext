{
  "roles": [
    {
      "role_name": "Director",
      "permissions": [
        "all"
      ],
      "description": "Full access to all modules and functions"
    },
    {
      "role_name": "Campus Head",
      "permissions": [
        "campus_management",
        "student_management", 
        "staff_management",
        "academic_records",
        "fee_management",
        "reports"
      ],
      "description": "Manage campus operations, students, and staff"
    },
    {
      "role_name": "Academic Coordinator",
      "permissions": [
        "course_management",
        "student_management",
        "academic_records",
        "examination_management",
        "program_management"
      ],
      "description": "Manage academic programs and student records"
    },
    {
      "role_name": "Admission Officer",
      "permissions": [
        "admission_management",
        "student_management",
        "application_processing",
        "enrollment"
      ],
      "description": "Handle admissions and student enrollment"
    },
    {
      "role_name": "Finance Officer",
      "permissions": [
        "fee_management",
        "financial_reports",
        "payment_processing",
        "budget_management"
      ],
      "description": "Manage fees and financial operations"
    },
    {
      "role_name": "Staff",
      "permissions": [
        "basic_student_view",
        "course_view",
        "attendance_management"
      ],
      "description": "Basic access for teaching staff"
    },
    {
      "role_name": "Student",
      "permissions": [
        "own_profile",
        "fee_payment",
        "academic_records_view",
        "admission_application"
      ],
      "description": "Student self-service portal access"
    }
  ]
}
